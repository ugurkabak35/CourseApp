@model Student
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Thanks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/stil.css">

</head>
<body>

    <div class="container m-4">
        <div class="caret mx-auto" style="width:500px;">
            <div class="card-header">
                Merhaba, @Model.Name
            </div>
            <div class="card-body">
                @if (Model.Confirm == true)
                {
                    <span>Kursa katıldığınız için teşekkür ederiz.</span>
                    <div>
                        Diğer katılımcıları <a asp-action="List">görüntüle.</a>
                    </div>
                }
                else
                {
                    <span>İncindik. Umarız dikriniz değişir.</span>
                }
            </div>
        </div>
    </div>

</body>
</html>